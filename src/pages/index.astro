---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ContactCard from "../components/ContactCard.astro";
import About from "../components/About.astro";
import Skills from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Hans Gómez | Portfolio">
	<Navbar />
	<main class="max-w-[1200px] mx-auto px-4 sm:px-6">
		<!-- Top Section -->
		<div class="relative min-h-[90vh] flex flex-col justify-center">
			<Hero />

			<!-- Integrated Contact Card -->
			<div
				class="flex justify-center lg:absolute lg:right-0 lg:top-[50%] lg:transform lg:-translate-y-1/2 lg:z-20 mt-10 lg:mt-0"
			>
				<div class="scale-75 sm:scale-90 lg:scale-100 w-full max-w-sm">
					<ContactCard />
				</div>
			</div>

			<!-- Scroll Indicator -->
			<div
				class="hidden md:flex absolute bottom-10 left-1/2 -translate-x-1/2 flex-col items-center gap-2 animate-bounce opacity-60"
			>
				<span class="text-2xl text-forest">↓</span>
			</div>
		</div>

		<!-- Content Flow -->
		<div class="flex flex-col">
			<!-- Skills acts as a full-width divider now -->
			<div id="skills" class="scroll-mt-24">
				<Skills />
			</div>

			<div id="about" class="mt-20 scroll-mt-24">
				<About />
			</div>

			<div id="projects" class="mt-20 scroll-mt-24">
				<Projects />
			</div>
		</div>
	</main>
	<Footer />
</Layout>
