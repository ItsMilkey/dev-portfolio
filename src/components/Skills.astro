---
const skillRows = [
    // Row 1 - Languages & Core (Scroll Right)
    [
        "Java",
        "Python",
        "Kotlin",
        "JavaScript",
        "TypeScript",
        "HTML5",
        "CSS3",
        "SQL",
        "Java",
        "Python",
        "Kotlin",
        "JavaScript",
        "TypeScript",
        "HTML5",
        "CSS3",
        "SQL", // Duplicated to ensure smooth loop
    ],
    // Row 2 - Frameworks & Tools (Scroll Left)
    [
        "Spring Boot",
        "Astro",
        "React",
        "Angular",
        "Node.js",
        "Git",
        "Maven",
        "Gradle",
        "PostgreSQL",
        "Spring Boot",
        "Astro",
        "React",
        "Angular",
        "Node.js",
        "Git",
        "Maven",
        "Gradle",
        "PostgreSQL", // Duplicated
    ],
];
---

<section
    class="py-12 bg-forest overflow-hidden relative border-t border-forest/10 w-[100vw] -ml-[calc(50vw-50%)]"
>
    <div class="mb-4 text-center">
        <span
            class="text-cream/40 px-4 py-1 border border-cream/20 rounded-full text-xs uppercase tracking-widest"
            >Stack & Experience</span
        >
    </div>

    <div class="flex flex-col gap-6">
        <!-- Row 1: Right Scroll -->
        <div class="group flex overflow-hidden w-full relative">
            <!-- Mask Fade Edges -->
            <div
                class="absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-forest to-transparent z-10 pointer-events-none"
            >
            </div>
            <div
                class="absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-forest to-transparent z-10 pointer-events-none"
            >
            </div>

            <div class="flex gap-4 animate-scroll-right min-w-max">
                {
                    skillRows[0].map((skill) => (
                        <div class="px-8 py-3 bg-cream/5 border border-cream/10 rounded-lg text-cream font-display text-2xl uppercase whitespace-nowrap hover:bg-vibrant-orange hover:text-forest hover:border-vibrant-orange transition-colors duration-300">
                            {skill}
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Row 2: Left Scroll -->
        <div class="group flex overflow-hidden w-full relative">
            <div
                class="absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-forest to-transparent z-10 pointer-events-none"
            >
            </div>
            <div
                class="absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-forest to-transparent z-10 pointer-events-none"
            >
            </div>

            <div class="flex gap-4 animate-scroll-left min-w-max">
                {
                    skillRows[1].map((skill) => (
                        <div class="px-8 py-3 bg-cream/5 border border-cream/10 rounded-lg text-cream font-display text-2xl uppercase whitespace-nowrap hover:bg-vibrant-orange hover:text-forest hover:border-vibrant-orange transition-colors duration-300">
                            {skill}
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
