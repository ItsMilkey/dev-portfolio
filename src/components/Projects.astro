            >
                <div class="h-64 bg-forest/10 relative overflow-hidden">
                    <!-- Pattern to replace image -->
                    <div
                        class="absolute inset-0 opacity-20"
                        style="background-image: repeating-linear-gradient(45deg, #000 0, #000 1px, transparent 0, transparent 10px);"
                    >
                    </div>
                    <div
                        class="absolute inset-0 bg-vibrant-orange/0 group-hover:bg-vibrant-orange/10 transition-colors duration-300"
                    >
                    </div>
                </div>

