<section
    class="min-h-[90vh] grid grid-cols-1 md:grid-cols-[1.5fr_1fr] gap-4 items-center py-20 relative"
>
    <!-- Text Content -->
    <div
        class="header-content z-10 order-2 md:order-1 flex flex-col items-center md:items-start text-center md:text-left overflow-visible"
    >
        <div class="relative mb-8 overflow-visible">
            <!-- Background depth layer -->
            <div
                class="absolute inset-0 -z-20 bg-gradient-to-br from-transparent via-forest/5 to-transparent rounded-lg blur-sm"
            >
            </div>

            <h1
                class="font-display font-extrabold text-[14vw] sm:text-[12vw] md:text-[6rem] leading-[1.1] tracking-tighter uppercase relative z-10"
                style="text-shadow: 
                    0 2px 4px rgba(45, 62, 47, 0.1),
                    0 4px 8px rgba(45, 62, 47, 0.15),
                    0 8px 16px rgba(45, 62, 47, 0.1),
                    0 16px 32px rgba(45, 62, 47, 0.05);"
            >
                <!-- Both names aligned, with spacing -->
                <span class="block text-forest">HANS</span>
                <span class="block text-forest mt-1 md:mt-2">GÓMEZ</span>
            </h1>

            <!-- Decorative element - Orange glow -->
            <div
                class="absolute -top-10 left-0 w-32 h-32 bg-vibrant-orange rounded-full mix-blend-multiply opacity-80 blur-xl animate-float -z-10"
            >
            </div>

            <!-- Decorative icons and shapes (hidden on mobile) -->
            <div
                class="hidden md:block absolute -right-8 top-0 text-coral text-3xl opacity-60 animate-pulse"
            >
                ✦
            </div>
            <div
                class="hidden sm:block absolute -left-6 bottom-4 text-vibrant-orange text-2xl opacity-40"
            >
                ●
            </div>

            <!-- Enhanced texture overlay (single responsive layer) -->
            <div
                class="absolute inset-0 opacity-[0.15] md:opacity-[0.25] pointer-events-none -z-5 grid-texture"
                style="--grid-size: 25px; transform: rotate(+1deg) scale(1.1);"
            >
            </div>
        </div>

        <div class="relative inline-block mb-8">
            <h2
                class="font-serif italic text-3xl md:text-4xl text-forest opacity-90"
            >
                Software Developer
            </h2>
            <!-- Yellow decorative line -->
            <div class="w-16 h-1 bg-vibrant-orange mt-2"></div>
        </div>

        <p
            class="font-sans text-lg md:text-xl font-medium max-w-lg text-forest/80 leading-relaxed"
        >
            Crafting efficient and scalable digital solutions with a blend of
            analytical rigor and creative engineering. I build robust backends
            and intuitive frontends designed to solve real-world problems.
        </p>
    </div>

    <!-- Image/Visual Content -->
    <div
        class="image-wrapper relative w-full max-w-md ml-auto mr-0 aspect-[3/4] order-1 md:order-2"
    >
        <!-- Main Frame -->
        <div
            class="absolute inset-0 bg-forest rounded-sm overflow-hidden z-20 border-2 border-forest transform rotate-3 transition-transform hover:rotate-0 duration-500"
        >
            <div
                class="w-full h-full bg-linear-to-b from-[#3a4f3d] to-forest opacity-90"
            >
            </div>
            <!-- Placeholder suggestion for user -->
            <div
                class="absolute inset-0 flex items-center justify-center text-cream/20 font-display text-4xl"
            >
                IMG
            </div>
        </div>

        <!-- Back accent -->
        <div
            class="absolute inset-0 bg-vibrant-orange rounded-sm -rotate-3 z-10 translate-x-4 translate-y-4"
        >
        </div>

        <!-- Decorative Stars -->
        <div
            class="absolute -top-6 -left-6 text-vibrant-orange text-6xl animate-pulse z-30"
        >
            ✦
        </div>
        <div class="absolute -bottom-8 -right-8 text-coral text-5xl z-30">
            ✦
        </div>
    </div>
</section>
